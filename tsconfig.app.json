{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "./lib/ui/src/**/*.ts",
    "./lib/ui/src/**/*.tsx",
    "./lib/shared-i18n/src/**/*.ts",
    "./lib/shared-i18n/src/**/*.tsx",
    "./lib/constants/src/**/*.ts",
    "./lib/constants/src/**/*.tsx",
    "./lib/http-service/src/**/*.ts",
    "./lib/http-service/src/**/*.tsx",
    "./lib/utils/src/**/*.ts",
    "./lib/utils/src/**/*.tsx"
  ]
}
